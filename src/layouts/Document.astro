---
// @ts-ignore
import { SEO } from 'astro-seo'
import { Font } from 'astro:assets'
import Analytics from '@vercel/analytics/astro'
import SpeedInsights from '@vercel/speed-insights/astro'
import '~/global.css'
import { canonize } from '~/lib/format'

const DEFAULT_TITLE = 'Tomasz Chojnacki'
const DEFAULT_DESCRIPTION =
  'Personal website of Tomasz Chojnacki, a software developer based in Wroc≈Çaw.'

interface Props {
  name?: string
  description?: string
}

const { name, description = DEFAULT_DESCRIPTION } = Astro.props
const title = name ? `${name} - ${DEFAULT_TITLE}` : DEFAULT_TITLE
const image = new URL('/static/open-graph.png', Astro.site).toString()
const canonical = canonize(Astro.url.href)
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <SEO
      {title}
      {description}
      {canonical}
      charset="UTF-8"
      openGraph={{
        basic: {
          title,
          type: 'website',
          image,
          url: canonical,
        },
        optional: {
          description,
          siteName: DEFAULT_TITLE,
          locale: 'en_US',
        },
        image: {
          url: image,
          width: 1280,
          height: 720,
          alt: 'Image of the website.',
        },
      }}
      twitter={{ card: 'summary' }}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/static/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternative" type="application/rss+xml" title="RSS Feed" href="/rss.xml" />
    <Font cssVariable="--font-inter" preload />
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          const local = localStorage.getItem('theme')
          if (local === 'dark' || local === 'light') {
            return local
          }
        }
        return 'dark'
      })()

      if (theme === 'dark') {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
  </head>
  <body
    class="bg-neudigo-50 dark:bg-neudigo-950 overflow-x-hidden text-neutral-900 dark:text-neutral-100"
  >
    <slot />
    <Analytics />
    <SpeedInsights />
  </body>
</html>
