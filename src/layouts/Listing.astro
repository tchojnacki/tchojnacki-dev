---
import Layout from "~/layouts/Layout.astro"

interface Props {
  name: string
  description: string
}

const { name, description } = Astro.props
---

<Layout {name} {description}>
  <main class="min-h-screen px-4 py-16 text-center">
    <h1 class="text-neutral-1000 dark:text-neutral-0 pb-8 text-3xl font-bold">{name}</h1>
    <nav>
      <slot />
    </nav>
  </main>
</Layout>
