---
import type { SimpleIcon } from 'simple-icons'

interface Props {
  icon: SimpleIcon | string
  title?: string
  className?: string
  pathClassName?: string
}

const { icon, title, className, pathClassName } = Astro.props
---

<svg class={className} role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
  <title>{title ? title : typeof icon === 'string' ? icon : icon.title}</title>
  {
    typeof icon === 'string' ? (
      <text
        x="50%"
        y="50%"
        font-size={24}
        font-weight="bold"
        font-family="monospace"
        text-anchor="middle"
        dominant-baseline="central"
        class:list={[pathClassName, 'select-none']}
      >
        {icon.charAt(0)}
      </text>
    ) : (
      <path class={pathClassName} d={icon.path} />
    )
  }
</svg>
