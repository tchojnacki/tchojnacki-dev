---
import { getSocials } from '~/utils/content'
import { routes } from '~/utils/routes'

import Wave from './Wave.astro'

const linkClass = 'hover:text-pure-black hover:underline hover:dark:text-pure-white'

const entries = [routes.about, routes.projects, routes.blog]

const projectLinks = [
  { href: 'https://github.com/tchojnacki/tchojnacki-dev', label: 'Source' },
  { href: 'https://github.com/tchojnacki/tchojnacki-dev/issues', label: 'Issues' },
]

const socials = await getSocials()
---

<Wave className="!max-h-32" />
<footer
  class="bg-legacyindigo-11 dark:bg-legacyindigo-4 text-legacyslate-8 dark:text-legacyslate-11 px-8 text-sm"
>
  <section class="flex flex-col justify-center text-center sm:flex-row sm:gap-32 sm:text-left">
    <ul>
      {
        entries.map(({ href, label }) => (
          <li>
            <a {href} class={linkClass}>
              {label}
            </a>
          </li>
        ))
      }
    </ul>
    <ul>
      {
        socials.map(({ href, label }) => (
          <li>
            <a {href} class={linkClass} target="_blank" rel="noreferrer">
              {label}
            </a>
          </li>
        ))
      }
    </ul>
    <ul>
      <a href="/sitemap" class={linkClass}>Sitemap</a>
      {
        projectLinks.map(({ href, label }) => (
          <li>
            <a {href} class={linkClass} target="_blank" rel="noreferrer">
              {label}
            </a>
          </li>
        ))
      }
    </ul>
  </section>
  <section>
    <p class="text-legacyslate-8 dark:text-legacyslate-11 py-8 text-center">
      Designed and developed by <strong>Tomasz&nbsp;Chojnacki</strong>
    </p>
  </section>
</footer>
