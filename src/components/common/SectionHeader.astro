---
import { Link } from 'tabler-icons-react'

interface Props {
  text: string
  slug?: string
}

const textToSlug = (text: string) => text.toLowerCase().replace(/\s+/g, '-')

const { text, slug } = Astro.props
const id = slug ?? textToSlug(text)
---

<h2 {id} class="group flex items-center justify-center pt-4 text-center text-3xl font-bold">
  <a class="px-10" href={`#${id}`}>
    {text}
  </a>
  <Link
    role="presentation"
    className="-order-1 -mr-8 opacity-0 group-hover:opacity-50 duration-200"
  />
</h2>
