---
import type { ImageMetadata } from 'astro'
import { getImage } from 'astro:assets'

import navBlobDark from '~/assets/nav-blob-dark.svg'
import navBlobLight from '~/assets/nav-blob-light.svg'

import NavInternal from './NavInternal'

const url = (src: ImageMetadata) => getImage({ src }).then(({ src }) => `url("${src}")`)

const { pathname } = Astro.url
const blobDarkUrl = await url(navBlobDark)
const blobLightUrl = await url(navBlobLight)
---

<NavInternal {pathname} {blobDarkUrl} {blobLightUrl} client:idle />
