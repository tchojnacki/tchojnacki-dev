---
import { getProjects, type Project, projectImportanceOrder } from '~/content'
import ProjectCard from './ProjectCard.astro'

interface Props {
  heading?: number
  length?: number
  filter?: (project: Project) => boolean
}

const { heading = 1, length = Infinity, filter } = Astro.props

const projectData = await getProjects()
const projects = projectImportanceOrder
  .flatMap(id => (id in projectData ? [projectData[id]!] : []))
  .filter(p => !filter || filter(p))
---

<ul class="flex flex-col items-center gap-16 px-4 py-8 lg:px-16">
  {
    projects
      .slice(0, length)
      .map((project, i) => <ProjectCard {heading} {project} flipped={i % 2 === 1} />)
  }
</ul>
