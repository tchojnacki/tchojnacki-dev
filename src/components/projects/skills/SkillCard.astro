---
import SimpleIconSvg from '~/components/common/SimpleIconSvg'
import { getSkills, type SkillId } from '~/utils/content'

interface Props {
  skillId: SkillId
}

const skill = (await getSkills())[Astro.props.skillId]
---

<li>
  <a
    href={`/skills/${skill.id}`}
    class="shadow-legacyindigo-2/25 dark:bg-legacyindigo-2 dark:shadow-legacyindigo-11/10 bg-legacyslate-12 flex h-full flex-col items-center gap-3 rounded-xl
      p-3 pt-4 shadow-md hover:scale-105 hover:shadow-lg
      hover:brightness-95 hover:dark:brightness-125"
  >
    <SimpleIconSvg
      icon={skill.icon}
      className="h-full"
      pathClassName="fill-legacyslate-3 dark:fill-legacyslate-12"
    />
    <h5 class="h-6 w-full overflow-hidden text-ellipsis whitespace-nowrap text-center leading-none">
      {skill.name}
    </h5>
  </a>
</li>
