---
import katex from 'katex'

interface Props {
  latex: string
  block?: boolean
}

const { latex, block = false } = Astro.props
const html = katex.renderToString(latex, { throwOnError: false, displayMode: block })
---

{
  block ? (
    <figure class="my-2 flex justify-center">
      <span set:html={html} />
    </figure>
  ) : (
    <span set:html={html} />
  )
}
