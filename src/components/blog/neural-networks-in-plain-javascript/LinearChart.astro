---
const BACKDROP = 'bg-[#EEEEEE] dark:bg-[#222222]'
const AXES_S = 'stroke-[#555555] dark:stroke-[#666666] fill-none'
const C1_S = 'stroke-[#FE5B1F] fill-none'
const C1_F = 'fill-[#FE5B1F] stroke-none'
const C2_F = 'fill-[#0074D9] stroke-none'

const MIN_X = -3
const MAX_X = 5
const MIN_Y = -4
const MAX_Y = 1
---

<figure class="my-2 overflow-hidden rounded-md">
  <svg
    viewBox={`${MIN_X} ${MIN_Y} ${MAX_X - MIN_X} ${MAX_Y - MIN_Y}`}
    class:list={['-scale-y-100', BACKDROP]}
  >
    <path d="M-3 0 L5 0" stroke-width="0.02" class={AXES_S}></path>
    <path d="M0 -4 L0 9" stroke-width="0.02" class={AXES_S}></path>
    <path d="M-1 -0.05 L-1 0.05" stroke-width="0.02" class={AXES_S}></path>
    <path d="M1 -0.05 L1 0.05" stroke-width="0.02" class={AXES_S}></path>
    <path d="M-0.05 -1 L0.05 -1" stroke-width="0.02" class={AXES_S}></path>
    <path d="M-0.05 1 L0.05 1" stroke-width="0.02" class={AXES_S}></path>

    <path d="M-3 -3.374 L5 0.411" stroke-width="0.02" class={C1_S}></path>
    <circle cx="1" cy="-1.48" r="0.05" class={C1_F}></circle>

    <circle cx="3.1" cy="-0.6" r="0.05" class={C2_F}></circle>
    <circle cx="-0.1" cy="-1.9" r="0.05" class={C2_F}></circle>
    <circle cx="4" cy="0" r="0.05" class={C2_F}></circle>
    <circle cx="-2.1" cy="-3" r="0.05" class={C2_F}></circle>
  </svg>
</figure>
