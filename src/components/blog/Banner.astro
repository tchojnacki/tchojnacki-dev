---
interface Props {
  kind: "warning" | "info"
}

const { kind } = Astro.props

const colors = (() => {
  switch (kind) {
    case "warning":
      return "bg-amber-500/25 border-l-amber-500"
    case "info":
      return "bg-sky-500/25 border-l-sky-500"
  }
})()
---

<aside class:list={["my-2 border-l-4 px-4 py-2", colors]}>
  <slot />
</aside>
